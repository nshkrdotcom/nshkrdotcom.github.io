modules = ["web", "bash", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["hugo"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Hugo Server"

[[workflows.workflow]]
name = "Hugo Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "hugo server --bind 0.0.0.0 --port 5000 --baseURL / --appendPort=false"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35545
externalPort = 3000
